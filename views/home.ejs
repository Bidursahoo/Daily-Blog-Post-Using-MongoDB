<h1>Welcome</h1>
<p><%= home %></p>
<% allPost.forEach(post => {%>
    <h1><%= post.title %></h1>
    <% if(post.text.length > 70){ %>
    <p><%= post.text.substring(0,70)+"... " %><a href="/posts/<%= post._id %>">Read More</a></p>
    <% }else{ %>
        <p><%= post.text %></p>
    <% } %>
<%}); %>
